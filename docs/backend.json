{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The unique ID of the user from Firebase Auth."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "username": {
          "type": "string",
          "description": "The user's unique username."
        },
        "fullName": {
          "type": "string",
          "description": "The user's full name."
        },
        "gender": {
          "type": "string",
          "enum": ["male", "female", "other"],
          "description": "The user's gender."
        },
        "phone": {
          "type": "string",
          "description": "The user's phone number."
        },
        "whatsapp": {
          "type": "string",
          "description": "The user's WhatsApp number."
        },
        "referralCode": {
          "type": "string",
          "description": "The unique code this user can share with others."
        },
        "referredBy": {
          "type": "string",
          "description": "The referral code of the user who referred this user."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user was created."
        },
        "subscription": {
          "type": "object",
          "properties": {
            "status": {
              "type": "string",
              "enum": ["active", "expired", "suspended"]
            },
            "expiresAt": {
              "type": "string",
              "format": "date-time"
            }
          }
        },
        "wallet": {
          "type": "object",
          "properties": {
            "balance": {
              "type": "number",
              "description": "Available withdrawable balance."
            },
            "lockedBonus": {
              "type": "number",
              "description": "Welcome bonus that is locked until conditions are met."
            },
            "totalEarned": {
              "type": "number",
              "description": "Lifetime earnings."
            }
          }
        },
        "referrals": {
          "type": "object",
          "properties": {
            "count": {
              "type": "number",
              "description": "Number of successful referrals."
            }
          }
        },
        "role": {
          "type": "string",
          "enum": ["user", "admin"],
          "description": "The user's role in the system."
        },
        "themePreference": {
          "type": "string",
          "enum": ["light", "dark", "system"]
        }
      },
      "required": ["uid", "email", "username", "fullName", "createdAt", "role"]
    },
    "Task": {
      "title": "Task",
      "description": "A task that users can complete to earn rewards.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "payout": { "type": "number" },
        "category": { "type": "string", "enum": ["Social", "Riddle", "Mega"] },
        "status": { "type": "string", "enum": ["active", "archived"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "payout", "category", "status"]
    },
    "TaskSubmission": {
      "title": "Task Submission",
      "description": "A user's submission for a task.",
      "type": "object",
      "properties": {
        "taskId": { "type": "string" },
        "userId": { "type": "string" },
        "proofUrl": { "type": "string", "format": "uri" },
        "proofText": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"] },
        "submittedAt": { "type": "string", "format": "date-time" },
        "adminNotes": { "type": "string" }
      },
      "required": ["taskId", "userId", "status", "submittedAt"]
    },
    "Raffle": {
      "title": "Raffle",
      "description": "A raffle draw event.",
      "type": "object",
      "properties": {
        "drawTime": { "type": "string", "format": "date-time" },
        "prizeAmount": { "type": "number" },
        "ticketPrice": { "type": "number" },
        "maxTicketsPerUser": { "type": "number" },
        "revealed": { "type": "boolean" },
        "status": { "type": "string", "enum": ["upcoming", "open", "drawing", "completed"] },
        "winnerId": { "type": "string" },
        "winningNumber": { "type": "number" }
      },
      "required": ["drawTime", "prizeAmount", "ticketPrice", "status"]
    },
    "RaffleTicket": {
      "title": "Raffle Ticket",
      "description": "A ticket purchased by a user for a raffle.",
      "type": "object",
      "properties": {
        "raffleId": { "type": "string" },
        "userId": { "type": "string" },
        "number": { "type": "number" },
        "purchasedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["raffleId", "userId", "number", "purchasedAt"]
    },
    "Withdrawal": {
      "title": "Withdrawal",
      "description": "A user's request to withdraw funds.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "amount": { "type": "number" },
        "fee": { "type": "number" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"] },
        "requestedAt": { "type": "string", "format": "date-time" },
        "processedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "amount", "fee", "status", "requestedAt"]
    },
    "ChatMessage": {
      "title": "Chat Message",
      "description": "A message in the global chatroom.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "username": { "type": "string" },
        "content": { "type": "string" },
        "mediaUrl": { "type": "string", "format": "uri" },
        "createdAt": { "type": "string", "format": "date-time" },
        "flagged": { "type": "boolean" }
      },
      "required": ["userId", "username", "content", "createdAt"]
    },
    "Notification": {
      "title": "Notification",
      "description": "A notification for a user or admin.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "title": { "type": "string" },
        "message": { "type": "string" },
        "read": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "title", "message"]
    },
    "GlobalSettings": {
      "title": "Global Settings",
      "description": "Platform-wide settings managed by admins.",
      "type": "object",
      "properties": {
        "whatsappGroupLink": { "type": "string", "format": "uri" },
        "defaultRafflePrize": { "type": "number" },
        "maxTicketsPerUser": { "type": "number" },
        "ticketPrice": { "type": "number" }
      }
    },
    "AILog": {
      "title": "AI Log",
      "description": "A log entry for an interaction with an AI model.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "flow": { "type": "string" },
        "input": { "type": "object" },
        "output": { "type": "object" },
        "error": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores individual user profile data."
    },
    "/tasks/{taskId}": {
      "schema": { "$ref": "#/entities/Task" },
      "description": "Collection of all available tasks."
    },
    "/taskSubmissions/{submissionId}": {
      "schema": { "$ref": "#/entities/TaskSubmission" },
      "description": "Submissions made by users for tasks."
    },
    "/raffles/{raffleId}": {
      "schema": { "$ref": "#/entities/Raffle" },
      "description": "Stores details for each raffle event."
    },
    "/raffles/{raffleId}/tickets/{ticketId}": {
      "schema": { "$ref": "#/entities/RaffleTicket" },
      "description": "Tickets purchased for a specific raffle."
    },
    "/withdrawals/{withdrawalId}": {
      "schema": { "$ref": "#/entities/Withdrawal" },
      "description": "History of all withdrawal requests."
    },
    "/chatMessages/{messageId}": {
      "schema": { "$ref": "#/entities/ChatMessage" },
      "description": "All messages from the global chatroom."
    },
    "/notifications/{notificationId}": {
      "schema": { "$ref": "#/entities/Notification" },
      "description": "Notifications for users and admins."
    },
    "/settings/global": {
      "schema": { "$ref": "#/entities/GlobalSettings" },
      "description": "A singleton document for global app settings."
    },
    "/aiLogs/{logId}": {
      "schema": { "$ref": "#/entities/AILog" },
      "description": "Logs from AI operations and tools."
    }
  }
}